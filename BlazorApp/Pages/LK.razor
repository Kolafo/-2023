@page "/LK"
<div class="profile-card" style="max-width: 300px; margin: auto; background-color: #f9f9f9; border-radius: 15px; box-shadow: 0 2px 5px rgba(0,0,0,0.2); padding: 20px; text-align: center;">
    <img src="@profilePictureUrl" style="width: 100px; height: 100px; border-radius: 50%; margin-bottom: 20px;" />
    <h2>@name @surname</h2>
    <p style="color: #777;">Age: @age</p>
    <p style="color: #777;">City: @city</p>
    <p style="color: #777;">Gender: @gender</p>
    <div>
        <h3>Hobbies:</h3>
        @foreach (var hobby in hobbies)
        {
            <span style="display: inline-block; background-color: #e0e0e0; border-radius: 25px; padding: 5px 10px; margin: 5px;">@hobby</span>
        }
    </div>
</div>

@code {
    string profilePictureUrl = "path/to/profile-picture.jpg"; // Replace with actual image path
    string name = "John";
    string surname = "Doe";
    int age = 30;
    string city = "New York";
    string gender = "Male";
    string[] hobbies = new[] {"Cooking", "Sports", "Reading", "Music"};
}